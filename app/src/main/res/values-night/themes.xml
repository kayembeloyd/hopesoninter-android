<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hopesoninter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_custom</item>
        <item name="colorPrimaryVariant">@color/black_custom</item>
        <item name="colorOnPrimary">@color/white_custom</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_custom</item>
        <item name="colorSecondaryVariant">@color/black_custom</item>
        <item name="colorOnSecondary">@color/white_custom</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/fredoka</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="LayoutBackground" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/black_custom</item>
    </style>

    <style name="LineLinearLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/blue_custom</item>
    </style>

    <style name="TextInputCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/grey_custom</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/grey_custom</item>
    </style>

    <style name="PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey_custom</item>
        <item name="rippleColor">@color/grey_lighter_custom</item>
    </style>

    <style name="NegativeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="rippleColor">@color/grey_custom</item>
        <item name="android:textColor">@color/red_custom</item>
    </style>

    <style name="PositiveButton.v2">
        <item name="backgroundTint">@color/grey_custom</item>
    </style>

    <style name="NetworkProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/grey_lighter_custom</item>
    </style>

    <style name="HeaderLinearLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/grey_custom</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/black_custom</item>
    </style>
</resources>